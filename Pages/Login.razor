@page "/login"

@inject NavigationManager NavigationManager

<div class="login-out-container">
    <div class="login-page login-left">
        <img src="images/decent2.jpg" alt="Decentralised market">
    </div>
    <div class="login-middle">
        <div class="greetings-container">
            <div class="greetings">
                <h1>Affiliates</h1>
            </div>
            <div class="greetings2">
                <h1>Program</h1>
            </div>
        </div>
        <div class="login-container">
            <h2>LOG IN</h2>
            <form class="login-form">
                <div class="form-group">
                    <input class="email" @bind="email" placeholder="     Email or username" type="text" id="username" name="username" required>
                </div>
                <div class="form-group">
                    <input class="pass" @bind="password" placeholder="     Password" type="password" id="password" name="password" required>
                </div>
                <div class="form-group">
                    <button @onclick="VerificarInformacion" >Log In</button>
                </div>
            </form>
        </div>
    </div>
    <div class="login-page login-right">
        <img src="images/cent2.jpg" alt="Centralised market">
    </div>
</div>


@code {
    string emailExample = "example";
    string passwordExample = "qwertyuiop";

    string email;
    string password;

    void VerificarInformacion ()
    {
        if (email == emailExample && password == passwordExample)
        {
            string url = $"/dashboard/{Uri.EscapeDataString(email)}";
            NavigationManager.NavigateTo(url);
        }
    }
}