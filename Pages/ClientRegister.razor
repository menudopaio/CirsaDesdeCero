@page "/dashboard/{userUsername}/clientRegister"

@code {
    [Parameter]
    public string userUsername { get; set; } = "exampleUsername";
    private List<string> exampleCustomization = new List<string> { "'Courier New', Courier, monospace", "darkmagenta", "800", "lightcoral", "EDIT YOUR", "GREETINGS HERE" };
}

<style>
    .greetings-container .greetings h1, .greetings-container .greetings2 h1, .login-container h2, .form-group button {
        font-family: @exampleCustomization[0] !important;
    }
    .login-container h2, .footing a {
        color: @exampleCustomization[1] !important;
        font-weight: @exampleCustomization[2] !important;
    }
    .login-out-container {
        background-color: @exampleCustomization[3] !important;
    }
    .topbar, .footer .px-4 {
        background-image: linear-gradient(120deg, @exampleCustomization[3] 0%, @exampleCustomization[1] 70%) !important;
    }

</style>

<Login TextoH2="Register" Title="@exampleCustomization[4]" Subtitle="@exampleCustomization[5]" />
